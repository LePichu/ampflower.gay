{
	"tasks": {
		"lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
		"build": "deno task lume",
		"serve": "deno task lume -s"
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "npm:preact"
	},
	"imports": {
		"lume/": "https://deno.land/x/lume@v1.16.2/"
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": false,
			"semiColons": false
		}
	}
}
